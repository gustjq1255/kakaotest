<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kakao.qna.mapper.QnaMapper">

    <select id="list" parameterType="kakao.qna.dto.QnaDto" resultType="kakao.qna.dto.QnaDto">
        <![CDATA[
            SELECT
                q.*
            FROM
                qna q
        ]]>
    </select>
    
    <select id="data" parameterType="kakao.qna.dto.QnaDto" resultType="kakao.qna.dto.QnaDto">
        <![CDATA[
			SELECT
            	q.*
			FROM
                qna q
            WHERE
            	q.seq = #{seq}
        ]]>
    </select>
    
    <insert id="insert" parameterType="kakao.qna.dto.QnaDto">
        <![CDATA[
            INSERT INTO qna
            (
                que_email
                ,que_title
                ,que_content
                ,que_date
                ,status
                ,in_date
                ,in_user_id
            )
            VALUES
            (
                #{queEmail}
                ,#{queTitle}
                ,#{queContent}
                ,NOW()
                ,#{status}
                ,NOW()
                ,#{inUserId}
            )
        ]]>
    </insert>
    
    <update id="update" parameterType="kakao.qna.dto.QnaDto">
		UPDATE qna SET
			up_date = NOW()
           	, up_user_id = #{upUserId}
			<if test='queEmail != null and queEmail != ""'>
				, que_email = #{queEmail}
           	</if>
           	<if test='queTitle != null and queTitle != ""'>
				, que_title = #{queTitle}
           	</if>
           	<if test='queContent != null and queContent != ""'>
				, que_content = #{queContent}
           	</if>
           	<if test='status != null and status != ""'>
				, status = #{status}
           	</if>
           	<if test='ansUserId != null and ansUserId != ""'>
				, ans_user_id = #{ansUserId}
	           	, ans_user_name = #{ansUserName}
	           	, ans_content = #{ansContent}
	           	, ans_date = #{ansDate}
           	</if>
           WHERE seq = #{seq}
            	
    </update>
    
    <update id="delete" parameterType="kakao.qna.dto.QnaDto">
        <![CDATA[
            DELETE FROM qna
            WHERE
            	seq = #{seq}
        ]]>
    </update>
</mapper>