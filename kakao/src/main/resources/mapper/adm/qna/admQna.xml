<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kakao.adm.qna.mapper.AdmQnaMapper">

    <select id="list" parameterType="kakao.qna.dto.QnaDto" resultType="kakao.qna.dto.QnaDto">
        <![CDATA[
            SELECT
                q.*
            FROM
                qna q
        ]]>
    </select>
    
    <select id="data" parameterType="kakao.qna.dto.QnaDto" resultType="kakao.qna.dto.QnaDto">
        <![CDATA[
			SELECT
            	q.*
			FROM
                qna q
            WHERE
            	q.seq = #{seq}
        ]]>
    </select>
    
    <update id="update" parameterType="kakao.qna.dto.QnaDto">
		UPDATE qna SET
			up_date = NOW()
           	, up_user_id = #{upUserId}
			, ans_user_id = #{ansUserId}
           	, ans_user_name = #{ansUserName}
           	, ans_content = #{ansContent}
           	, ans_date = NOW()
           	, status = #{status}
           WHERE seq = #{seq}
            	
    </update>
    
    <update id="delete" parameterType="kakao.qna.dto.QnaDto">
        <![CDATA[
            DELETE FROM qna
            WHERE
            	seq = #{seq}
        ]]>
    </update>
</mapper>